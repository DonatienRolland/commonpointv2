<div style="display: flex; align-items: center; justify-content: space-between;">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="active nav-item">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Calendrier</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Flux</a>
    </li>
  </ul>
  <button type="button" class="btn btn-no-border hidden-xs" data-toggle="modal" data-target="#newevenementModal" style="margin: 0;">
    Créer un événement
  </button>
</div>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <%= render 'calendrier-evenement', user: @user, evenements: @evenements %>
  </div>

  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" style="overflow-y: scroll; overflow-x: hidden;">
    <%= render 'evenements/list-evenements', user: @user, evenements: @user_all_evenements %>
  </div>
</div>
